{
  "$schema": "http://json-schema.org/draft-04/schema#",

  "definitions": {
    "parent": {
      "type" : ["object", "null"],
      "required" : [
        "id",
        "type"
      ],
      "properties": {
        "id" : { "type": "string" },
        "type" : { "type": "string" }
      }
    },
    "branch_reference": {
      "type" : ["object", "null"],
      "required" : [
        "id",
        "type"
      ],
      "properties": {
        "id" : { "type": "string" },
        "type" : { "type": "string" }
      }
    },
    "branch": {
      "type" : ["object", "null"],
      "required" : [
        "id",
        "type"
      ],
      "properties": {
        "id" : { "type": "string" },
        "type" : { "type": "string" },
        "additionalProperties": false,
        "attributes": {
          "type": "object",
          "required": [
            "address",
            "latitude",
            "longitude"
          ],
          "properties": {
            "address" :   { "type": ["string", "null"] },
            "latitude" :  { "type": ["string", "null"] },
            "longitude" : { "type": ["string", "null"] }
          }
        }
      }
    }
  },
  "type": "object",
  "required": [
    "data"
  ],
  "properties": {
    "data" : {
      "type" : "object",
      "required" : [
        "id",
        "type",
        "attributes"
      ],
      "properties": {
        "id" : { "type": "string" },
        "type" : { "type": "string" },
        "attributes": {
          "type": "object",
          "required": [
            "name",
            "address",
            "town",
            "website",
            "phone",
            "email",
            "latitude",
            "longitude",
            "notes",
            "categories",
            "verified"
          ],
          "properties": {
            "name" :      { "type": "string" },
            "address" :   { "type": ["string", "null"] },
            "town" :      { "type": ["string", "null"] },
            "website" :   { "type": ["string", "null"] },
            "phone" :     { "type": ["string", "null"] },
            "email" :     { "type": ["string", "null"] },
            "latitude" :  { "type": ["string", "null"] },
            "longitude" : { "type": ["string", "null"] },
            "facebook-url" : { "type": ["string", "null"] },
            "verified":   { "type": "boolean" },
            "notes":      {"type": ["string", "null"] },
            "categories": {
              "type": "array",
              "items": [{
                "type": "string"
              }]
            }
          }
        },
        "relationships": {
          "type": "object",
          "required": [
            "parent"
          ],
          "properties":  {
            "parent": {
              "type": "object",
              "required": [
                "data"
              ],
              "properties": {
                "data": { "$ref": "#/definitions/parent" }
              }
            },
            "branches": {
              "type": "object",
              "required": [
                "data"
              ],
              "properties": {
                "data": {
                  "type": [ "array", "null"],
                  "items": [{
                    "$ref": "#/definitions/branch_reference"
                  }]
                }
              }
            }
          }
        }
      }
    },
    "included": {
      "type": "array",
      "items": [{
        "$ref": "#/definitions/branch"
      }]
    }
  }
}
